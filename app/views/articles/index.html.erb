<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Contributor</th>
      <th>Prefecture</th>
      <th>city</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= attachment_image_tag(article, :image, :fill, 100, 100, fallback: "no-image.jpg") %></td>
        <td><%= image_tag('no_image.jpg') %></td>
        <td><%= article.prefecture_code %></td>
        <td><%= article.address_city %></td>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article, class: "show_#{article.id}" %></td>
        <td><%= link_to 'Edit', edit_article_path(article.id), class: "edit_#{article.id}" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{article.id}" %></td>
        <td><%= link_to "#{article.article_comments.count} コメント", article_path(article.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2><%= link_to 'New Article', new_article_path %></td></h2>