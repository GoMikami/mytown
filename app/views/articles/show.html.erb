<p><strong>Prefecture: </strong><%= @article.prefecture_code %></p>
<p><strong>City: </strong><%= @article.address_city %></p>
<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Body: </strong><%= @article.body %></p>

<%= link_to 'Edit', edit_article_path(@article), class: "edit_#{@article.id}" %> |
<%= link_to 'Back', articles_path, class: "back" %>

<div class="article-comments">
<p>コメント件数：<%= @article.article_comments.count %></p>
<% @article.article_comments.each do |article_comment| %>
  <%= article_comment.contributor.name %>
  <%= article_comment.created_at.strftime('%Y/%m/%d') %><%= article_comment.comment %>
  <% if article_comment.contributor == current_contributor %>
  <div class="comment-delete">
    <%= link_to "削除", article_article_comment_path(article_comment.article, article_comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>

<div class="new-comment">
<%= form_with(model:[@article, @article_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>